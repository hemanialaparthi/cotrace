{
  "manifest_version": 3,
  "name": "cotrace",
  "version": "1.0",
  "description": "Chrome Extension for Semantic Summarization of Collaborative Changes",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/document/*",
        "https://docs.google.com/spreadsheets/*",
        "https://docs.google.com/presentation/*"
      ],
      "js": ["content.js"]
    }
  ]
}
